<%
	var title = page.title;

	if (is_archive()){
		title = 'Archives';

		if (is_month()){
			title += ': ' + page.year + '/' + page.month;
		} else if (is_year()){
			title += ': ' + page.year;
		}
	} else if (is_category()){
		title = 'Category: ' + page.category;
	} else if (is_tag()){
		title = 'Tag: ' + page.tag;
	}
%>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title itemprop="name"><% if (title){ %><%= title %> - <% } %><%= config.title %></title>
	<% if (title) { %>
	<meta property="og:title" content="<%= title %>">
	<% } %>
	<% if ( is_home() ) { %>
	<meta name="description" content="<%= config.description %>">
	<% } else if ( is_post() ) { %>
	<% if ( page.description ) { %>
	<meta name="description" content="<%= page.description %>">
	<% } %>
	<% } %>
	<meta property="og:site_name" content="<%= config.title %>">
	<meta property="og:locale" content="ja_JP">
	<% if ( is_home() ) { %>
	<meta property="og:url" content="<%- config.url + config.root %>">
	<meta itemprop="url" content="<%- config.url + config.root %>">
	<link rel="canonical" href="<%- config.url + config.root %>">
	<% } else if ( is_post() ) { %>
	<meta property="og:url" content="<%- page.permalink %>">
	<meta itemprop="url" content="<%- page.permalink %>">
	<link rel="canonical" href="<%- page.permalink %>">
	<% } %>
	<% if ( is_home() ) { %>
	<meta property="og:type" content="blog">
	<% } else if ( is_post() ) { %>
	<meta property="og:type" content="article">
	<% } %>
	<% if (config.rss) { %>
	<link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.rss %>">
	<% } %>
	<% if (config.feed && config.feed.type == 'atom') { %>
	<link rel="alternate" type="application/atom+xml" title="Atom 0.3" href="<%- config.feed.path %>"><% } %>
	<% if (config.feed && config.feed.type == 'rss') { %>
	<link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.feed.path %>">
	<% } %>
	<link rel="stylesheet" href="<%- config.root %>css/style.min.css">
	<!-- Google Tag Manager -->
	<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
	new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
	j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
	'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
	})(window,document,'script','dataLayer','GTM-KQS6BKM');</script>
	<!-- End Google Tag Manager -->
</head>
